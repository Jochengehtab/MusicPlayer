<?xml version="1.0" encoding="utf-8"?>

<resources>
    <!-- Base style for all outlined buttons -->
    <style name="App.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- Text color -->
        <item name="android:textColor">@android:color/black</item>

        <!-- Outline stroke -->
        <item name="strokeColor">@android:color/black</item>
        <item name="strokeWidth">1dp</item>

        <!-- Ripple on press -->
        <item name="rippleColor">#1F000000</item>
    </style>
</resources>
