<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Updated outlinedâ€button style with a thicker blue outline -->
    <style name="App.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <!-- White text on dark background -->
        <item name="android:textColor">#FFFFFF</item>

        <!-- Thicker blue outline stroke (3dp instead of 1dp) -->
        <item name="strokeColor">#2196F3</item>
        <item name="strokeWidth">3dp</item>

        <!-- Transparent fill so only the outline is visible -->
